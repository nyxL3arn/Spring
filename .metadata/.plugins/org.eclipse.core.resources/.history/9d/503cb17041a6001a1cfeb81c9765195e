package com.luv2code.springdemo;

import org.springframework.context.support.ClassPathXmlApplicationContext;

public class FortuneReading {

	public static void main(String[] args) {
		// read spring config file
		ClassPathXmlApplicationContext fortuneContext = new ClassPathXmlApplicationContext("applicationContext.xml");
				
		//get the bean from spring container
		FortuneService readFortune = fortuneContext.getBean("badFortuneService",FortuneService.class);
		
		//call methods on the bean
		readFortune.getFortune();
		
		//close the context
		fortuneContext.close();
	}

}
